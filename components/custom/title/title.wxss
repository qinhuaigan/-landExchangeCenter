/* components/custom/title/title.wxss */
.clearfix:after {
  content: "";
  display: block;
  visibility: hidden;
  clear: both;
  height: 0;
}

.clearfix {
  /* 为了照顾ie6浏览器*/
  zoom: 1;
}

.titleBox {
  width: 100%;
  height: 130rpx;
  background-image: url('https://link.jscdn.cn/1drv/aHR0cHM6Ly8xZHJ2Lm1zL3UvcyFBdDdZUmxwaHBDSm9qU21ZNWdWUmVXUWdQeDhZP2U9MGEwTnl4.jpg');
  color: #fff;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  font-size: 32rpx;
  background-position: center;
}

.titleRight {
  float: right;
  width: 45%;
  text-align: center;
  padding-top: 10rpx;
}

.titleLeft {
  float: left;
  width: 60%;
  font-weight: bold;
  text-align: center;
  padding-top: 8rpx;
}

.pageContent {
  padding: 10rpx 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
}