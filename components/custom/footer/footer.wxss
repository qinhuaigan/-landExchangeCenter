  background-image: url('https://s1.ax1x.com/2020/08/20/dGrMgP.png');
  background-size: contain;
  background-repeat: no-repeat;
  background-position: left bottom;
  position: absolute;
  left: 35%;
  bottom: 0;
  z-index: 200;
}

.footerBox .box4 {
  width: 30%;
  height: 200rpx;
  background-image: url('https://s1.ax1x.com/2020/08/20/dGru9I.png');
