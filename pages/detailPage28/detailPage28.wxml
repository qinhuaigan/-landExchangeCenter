<!--pages/detailPage24/detailPage24.wxml-->
<view class="pageBody">
	<music></music>
	<navigator class="gotoMapBtn" url="../mapPage/mapPage?id=28">
		<view class="gotoMapBtntext">
			<wux-icon type="ios-send" size="20" />
			<view>导航</view>
		</view>
	</navigator>
	<view class="mt20px">
		<title leftTitle="28. 柳 江 区" rightTitle="LIUJIANG"></title>
	</view>
	<view class="pageContent">
		<view class="detailTitle">柳江大道C-1-2地块</view>
		<view class="imgTitle">推荐地块区位图</view>
		<image mode="widthFix" src="{{images[0]}}" data-src="{{images[0]}}" bindtap="preview"></image>
		<view class="imgTitle mt20px">地块位置</view>
		<image mode="widthFix" src="{{images[1]}}" data-src="{{images[1]}}" bindtap="preview"></image>
		<view class="mt20px">
			<contentBox title="地块信息">
				<wux-row class="lineHeight32px">
					<wux-col span="5" class="text-right">地块用途：</wux-col>
					<wux-col span="7">零售商业、旅馆业用地</wux-col>
					<wux-col span="5" class="text-right">地块面积：</wux-col>
					<wux-col span="7">18.15亩</wux-col>
					<wux-col span="5" class="text-right">容积率：</wux-col>
					<wux-col span="7">2.0~3.0</wux-col>
					<wux-col span="5" class="text-right">建筑密度：</wux-col>
					<wux-col span="7">15%~25%</wux-col>
					<wux-col span="5" class="text-right">建筑高度：</wux-col>
					<wux-col span="7">-15m~100m</wux-col>
          <wux-col span="5" class="text-right">绿地率：</wux-col>
					<wux-col span="7">≥25%</wux-col>
				</wux-row>
			</contentBox>
		</view>
	</view>
	<view class="mt20px">
		<title leftTitle="柳州美景" rightTitle="LIUJIANG"></title>
	</view>
	<view class="pageContent">
		<view class="mt10px">
			<wux-row gutter="10">
				<wux-col span="6">
					<view class="overHide">
						<image style="height: 250rpx" mode="heightFix" src="{{images[2]}}" data-src="{{images[2]}}"
							bindtap="preview"></image>
						<image class="mt10px" style="height: 250rpx" mode="heightFix" src="{{images[3]}}" data-src="{{images[3]}}"
							bindtap="preview"></image>
					</view>
				</wux-col>
				<wux-col span="6">
					<view class="overHide">
						<image style="height: 520rpx" mode="heightFix" src="{{images[4]}}" data-src="{{images[4]}}"
							bindtap="preview"></image>
					</view>
				</wux-col>
			</wux-row>
		</view>
		<view class="footerText">宗地出让条件等信息以柳州市土地交易储备中心发布的公开交易文件为准</view>
	</view>
	<footer startAnimate="{{startAnimate}}"></footer>
</view>






